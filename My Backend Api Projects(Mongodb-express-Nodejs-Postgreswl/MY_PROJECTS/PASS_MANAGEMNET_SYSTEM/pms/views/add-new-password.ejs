      <script
        src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>
  <!-- Custom Theme files -->

  <!-- //Custom Theme files -->
  <!-- web font -->

</head>

<body>
  <nav
    class="navbar navbar-expand-lg navbar-dark bg-transparent">
    <a class="navbar-brand" href="/">Password
      Management System</a>
    <button class="navbar-toggler" type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse"
      id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link active"
          href="/">Home <span
            class="sr-only">(current)</span></a>

        <li class="dropdown">
          <a class="dropdown-toggle nav-item nav-link"
            data-toggle="dropdown"
            href="/passwordCategory">Password
            Category
            <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/addNewCategory">Add
                New
                Category</a></li>
            <li><a href="/passwordCategory">View
                all
                Category</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a class="dropdown-toggle nav-item nav-link"
            data-toggle="dropdown"
            href="/passwordDetails">Password
            details
            <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/addNewPassword">Add
                New
                password</a></li>
            <li><a href="/passwordDetails">View
                all
                password</a></li>
          </ul>
        </li>
          <a class="nav-item nav-link active"
            style="float: right;" href="/logout">Logout
            <span class="sr-only">(current)</span></a>
      </div>
    </div>
    <a class="navbar-brand" style="float: right;"
      href="/dashboard"><i class="fa fa-user" aria-hidden="true"></i>
      <% if(loginUser){ %> <%= loginUser %> <% }  %>
    </a>
  </nav>

  <div class="main-w3layouts wrapper">

    <h1 class="text-centre"><%= title %></h1>
    <div class="main-agileinfo">
      <div class="agileits-top">
        <form action="/addNewPassword" method="post">
           <% if (success  != ''){%>
         <p> <%=  success %></p>

            <% }%>
          <div class="formgroup" id="message-form">
            <select  name ="pass_cat" style="width: 400px; text-align:center; background-color: transparent; color: white;" >
              <option value="">Choose Password category</option>
              <% if(records.length >0) {
                records.forEach(function(row){
               %>
              <option value="<%= row.password_category %>" style="color: black;"><%= row.password_category %></option>
             <% })  } %>
          </div>
  

            <div class="formgroup " id="message-form" style="width: 400px; text-align:center; background-color: transparent;">
              <label for="message" style="color: white;">Enter Your Password</label>
              <textarea id="editor1"
                name="pass_details" style="width: 400px; text-align:center;"></textarea>
            </div>

          <input type="submit"
            value="ADD PASSWORD">
        </form>
        <p> <a href="/passwordDetails">
            View all Password List</a></p>
      </div>
    </div>
  </div>
    <script>
      CKEDITOR.replace('editor1');
    </script>

  <script
    type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

  <script
    src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
    crossorigin="anonymous"></script>
  <script
    src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>
</body>

</html>