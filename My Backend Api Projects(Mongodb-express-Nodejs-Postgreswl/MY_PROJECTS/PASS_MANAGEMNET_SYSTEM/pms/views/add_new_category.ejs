<body>
  <nav
    class="navbar navbar-expand-lg navbar-dark bg-transparent">
    <a class="navbar-brand" href="/">Password
      Management System</a>
    <button class="navbar-toggler" type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse"
      id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link active"
          href="/">Home <span
            class="sr-only">(current)</span></a>

        <li class="dropdown">
          <a class="dropdown-toggle nav-item nav-link"
            data-toggle="dropdown"
            href="/passwordCategory">Password
            Category
            <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/addNewCategory">Add
                New
                Category</a></li>
            <li><a href="/passwordCategory">View
                all
                Category</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a class="dropdown-toggle nav-item nav-link"
            data-toggle="dropdown"
            href="/passwordDetails">Password
            details
            <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/addNewPassword">Add
                New
                password</a></li>
            <li><a href="/passwordDetails">View
                all
                password</a></li>
          </ul>
        </li>
          <a class="nav-item nav-link active"
            style="float: right;" href="/logout">Logout
            <span class="sr-only">(current)</span></a>
      </div>
    </div>
    <a class="navbar-brand" style="float: right;"
      href="/dashboard"><i class="fa fa-user" aria-hidden="true"></i>
      <% if(loginUser){ %> <%= loginUser %> <% }  %>
    </a>

    
  </nav>

  <div class="main-w3layouts wrapper">

      <h1 class="text-centre"><%= title %></h1>
    <div class="main-agileinfo">
      <div class="agileits-top">
        <form action="/addNewCategory" method="post">
          <% if(errors  != '') {%> 
            <p style="text-align: center; color: red;"><%= errors.passwordCategory.msg %></p>
          <%  } %>


          <% if(success != '') {%>
          <p style="text-align: center; color: greenyellow;">
            <%= success %></p>
          <%  } %>
          <input class="text" type="text"
            name="passwordCategory" placeholder="Enter Your Password Category name"
            >
  
          
          <input type="submit" value="ADD CATEGORY">
        </form>
        <p> <a href="/passwordCategory">
            View all Category List</a></p>
      </div>
    </div>
  </div>

<script
