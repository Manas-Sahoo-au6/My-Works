<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-6">
      <h3>Enter Fish Name to delete</h3>
      <hr style=" height: 12px;border: 0;box-shadow: inset 0 12px 12px -12px rgba(0, 0, 0, 0.5);">
      <br>
      <form action="/deleteFish" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" id="name" placeholder="Enter Fish name" name="name" required>
        </div>
        <button type="submit" class="btn btn-danger">Delete Fish</button>
      </form>
    </div>
  </div>
</div>