<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-6">
      <h3>Enter Fish Details To update <strong>[CAN NOT UPDATE FISH NAME]</strong></h3>
      <hr style=" height: 12px;border: 0;box-shadow: inset 0 12px 12px -12px rgba(0, 0, 0, 0.5);">
      <br>
      <form action="/updateFish" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" id="name" placeholder="Enter Fish name" name="name" required>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="type" placeholder="Enter Fish Type" name="type" required>
        </div>
        <div class="form-group">
          <input type="color" class="form-control" id="color" placeholder="Enter Fish Color" name="color" required>
        </div>
        <div class="form-group">
          <input type="Number" class="form-control" id="size" placeholder="Enter Fish Size" name="size" required>
        </div>
        <button type="submit" class="btn btn-info">Update Fish</button>
      </form>
    </div>
  </div>
</div>